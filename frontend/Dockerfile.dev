# Development Dockerfile for Next.js frontend with hot reloading
FROM node:20-bookworm-slim

WORKDIR /app

# Install curl for health checks
RUN apt-get update && apt-get install -y --no-install-recommends curl \
    && rm -rf /var/lib/apt/lists/*

# Copy package files only
COPY package*.json ./

# Install dependencies
RUN npm install && npm cache clean --force

# Code will be mounted as volume - no COPY needed

# Run as root in dev mode to avoid permission issues with mounted volumes
# USER node  # Commented out for dev mode

# Expose the development port
EXPOSE 3000

# Set environment to development
ENV NODE_ENV=development
ENV PORT=3000

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:3000/ || exit 1

# Start the development server with hot reloading
CMD ["npm", "run", "dev"]
