{
  "family": "megilance-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::789406175220:role/megilance-exec-role",
  "taskRoleArn": "arn:aws:iam::789406175220:role/megilance-task-role",
  "containerDefinitions": [
    {
      "name": "backend",
  "image": "789406175220.dkr.ecr.us-east-2.amazonaws.com/megilance-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "us-east-2"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-2"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:789406175220:secret:megilance/prod/database:database_url::"
        },
        {
          "name": "ACCESS_TOKEN_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:789406175220:secret:megilance/prod/jwt:access_secret::"
        },
        {
          "name": "REFRESH_TOKEN_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:789406175220:secret:megilance/prod/jwt:refresh_secret::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/megilance-backend",
                  "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "python -c \"import sys,urllib.request,socket; socket.setdefaulttimeout(3); r=urllib.request.urlopen('http://127.0.0.1:8000/api/health/live'); sys.exit(0 if 200<=r.getcode()<400 else 1)\""
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
