# @AI-HINT: MegiLance Backend Configuration Example
# ============================================================================
# Copy this file to .env and fill in the values
# ============================================================================

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=MegiLance API
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=1

# =============================================================================
# Database - Turso Remote Database (REQUIRED)
# =============================================================================
# Get free Turso database at: https://turso.tech
# Create database: turso db create megilance-db
# Get URL: turso db show megilance-db --url
# Get token: turso db tokens create megilance-db
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token-here

# =============================================================================
# Security & JWT
# =============================================================================
SECRET_KEY=your-secret-key-at-least-32-characters-long
JWT_SECRET_KEY=your-secret-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# =============================================================================
# CORS & Frontend
# =============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:8000"]
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# File Storage
# =============================================================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# OAuth - Google
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# OAuth - GitHub
# =============================================================================
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# Email (Resend) & SMTP
# =============================================================================
RESEND_API_KEY=re_your_resend_key
FROM_EMAIL=onboarding@resend.dev
FROM_NAME=MegiLance

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# =============================================================================
# Payments (Stripe & Crypto)
# =============================================================================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PLATFORM_FEE_PERCENT=10.0
MOCK_PAYMENTS_ENABLED=true

CRYPTO_USE_TESTNET=true
USDC_RECEIVING_ADDRESS_POLYGON=your-wallet-address

# =============================================================================
# 2FA (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# AI & Monitoring
# =============================================================================
OPENAI_API_KEY=
AI_SERVICE_URL=http://localhost:8001
SENTRY_DSN=

# =============================================================================
# Redis (Optional)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
