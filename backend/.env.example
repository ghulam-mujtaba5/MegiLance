# @AI-HINT: Environment configuration example for MegiLance Backend with Turso

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=MegiLance API
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# Database - Turso (libSQL) Configuration
# =============================================================================
# For local development (SQLite file):
DATABASE_URL=file:./local.db

# For production (Turso cloud database):
# Get these from: https://turso.tech/
# TURSO_DATABASE_URL=libsql://your-database-org.turso.io
# TURSO_AUTH_TOKEN=your-turso-auth-token

# =============================================================================
# Security & JWT
# =============================================================================
SECRET_KEY=your-secret-key-at-least-32-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080
JWT_ALGORITHM=HS256

# =============================================================================
# CORS Settings
# =============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# =============================================================================
# File Storage
# =============================================================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# Email Configuration (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@megilance.com
FROM_NAME=MegiLance
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Stripe Payment Integration
# =============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PLATFORM_FEE_PERCENT=10.0

# =============================================================================
# AI Service
# =============================================================================
AI_SERVICE_URL=http://localhost:8001
OPENAI_API_KEY=sk-...

# =============================================================================
# Two-Factor Authentication
# =============================================================================
# Automatically handled by pyotp library

# =============================================================================
# VERSION 2.0 ADVANCED FEATURES
# =============================================================================

# SMS MFA (Twilio)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Multi-Currency Exchange Rates
EXCHANGERATE_API_KEY=your-exchangerate-api-key
COINGECKO_API_KEY=CG-your-coingecko-api-key

# Video Communication (WebRTC)
STUN_SERVER_URL=stun:stun.l.google.com:19302
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_SERVER_USERNAME=your-turn-username
TURN_SERVER_CREDENTIAL=your-turn-password

# Blockchain Integration
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/YOUR-PROJECT-ID
ETHEREUM_NETWORK=mainnet
POLYGON_NETWORK=mainnet
BITCOIN_NETWORK=mainnet
SOLANA_NETWORK=mainnet-beta

# =============================================================================
# Monitoring & Logging
# =============================================================================
SENTRY_DSN=
LOG_LEVEL=INFO
